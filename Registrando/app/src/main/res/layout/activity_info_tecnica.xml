<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".controle.TelaInfoTecnica">

    <ImageView
        android:id="@+id/icoTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:padding="@dimen/padding"
        android:src="@drawable/titulo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/icoTitulo"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:padding="@dimen/padding"
        android:text="Informações Técnicas"
        android:textAllCaps="true"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text5"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_artigos"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:background="@color/colorButton2"
        android:padding="20dp"
        android:text="Artigos Científicos"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text4"
        android:layout_alignTop="@+id/btn_manual"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_dicionario"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:background="@color/colorButton2"
        android:padding="20dp"
        android:text="Dicionários de Abreviaturas"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text4"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/btn_artigos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_manual"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:background="@color/colorButton2"
        android:padding="20dp"
        android:text="Manual de Siglas"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text4"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/btn_txtApoio"
        android:layout_alignStart="@+id/btn_txtApoio" />

    <Button
        android:id="@+id/btn_txtApoio"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:background="@color/colorButton2"
        android:padding="20dp"
        android:text="Textos de Apoio"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text4"
        android:layout_alignTop="@+id/btn_dicionario"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

